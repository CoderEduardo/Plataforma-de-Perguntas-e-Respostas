<%- include('./partials/header.ejs') %>

<body>
    <%- include('./partials/navbar.ejs') %>
    
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responda: </h3>
            <label>Resposta: </label>
            <textarea name="corpo" placeholder="Digite sua resposta:" class="form-control" name="corpo"></textarea><br>
            <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas: </h3>

        <% respostas.forEach(resposta => { %>
            
            <div class="card mt-5">
                <div class="card-body">
                    <%= resposta.corpo %>
                </div>
            </div>

        <% });  %>

</body>

<%- include('./partials/footer.ejs') %>
